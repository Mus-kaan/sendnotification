<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MajorVersion Condition=" '$(MajorVersion)' == '' ">1</MajorVersion>
    <MinorVersion Condition=" '$(MinorVersion)' == '' ">0</MinorVersion>
    <PatchVersion Condition=" '$(PatchVersion)' == '' ">1</PatchVersion>
    <BuildMetadata Condition=" '$(BuildMetadata)' == '' ">0</BuildMetadata>
    <Version>$(MajorVersion).$(MinorVersion).$(PatchVersion)-build$(BuildMetadata)</Version>
  </PropertyGroup>

  <PropertyGroup>
    <LiftrClassLibraryTargetFramework>netstandard2.0</LiftrClassLibraryTargetFramework>
    <LiftrACISClassLibraryTargetFramework>net462</LiftrACISClassLibraryTargetFramework>
    <LiftrExeTargetFramework>netcoreapp3.1</LiftrExeTargetFramework>
  </PropertyGroup>

  <!-- Enable deterministic build -->
  <PropertyGroup>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <!--Generate XML documentation-->
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591;CA1031</NoWarn>
  </PropertyGroup>

  <!--Do not generate nuget packages by default-->
  <PropertyGroup>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

 <PropertyGroup>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <Import Project="$(MSBuildThisFileDirectory)\PackageVersions.props"/>
</Project>
